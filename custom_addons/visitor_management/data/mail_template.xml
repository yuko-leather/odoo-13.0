<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Mail template are declared in a NOUPDATE block
         so users can freely customize/delete them -->
    <data noupdate="1">
        <!--Email template -->
        <record id="email_template" model="mail.template">
            <field name="name">Visitor: Send by email</field>
            <field name="model_id" ref="visitor_management.model_visitor_data"/>
            <field name="email_from">${(object.v_name.email_formatted) |safe}</field>
            <field name="partner_to">${object.work_email}</field>
            <field name="subject">Visitor (Ref ${object.employee_id})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear
                            ${object.employee_id}
                    <br/>
                    <br/>
                    <p>
                        I waiting for you!!
                    </p>
                    </p>
                </div>
            </field>
<!--            <field name="auto_delete" eval="True"/>-->
        </record>
    </data>
</odoo>